@using ASP.NETCore_RazorPages.Pages.Components

<header>
    <div class="container">
            <a id="logo" href="home.html"><img src="images/silicon-logo-light_theme.svg" alt=""></a>
            <div id="menu">
                <nav>
                    <a class="menu-link" href="#showcase">Overview</a>
                    <a class="menu-link" href="#features">Features</a>
                    <a class="menu-link" href="contact">Contact</a>
                </nav>
            </div>

            <div clas="btn-switch">
                <label>Light</label>
                <label class="switch" for="switch-mode">
                    <input type="checkbox" id="switch-mode">
                    <span class="slider round"></span>
                </label>
                <label>Dark</label>
            </div>

            <div class="account-buttons">
                <partial name="~/Pages/Components/_Button.cshtml" model='new ButtonViewModel { ClassName = "btn-gray", Link = "signIn", Icon = "fa-regular fa-sign-in", Text = "Sign in" }' />
                <partial name="~/Pages/Components/_Button.cshtml" model='new ButtonViewModel { ClassName = "btn-theme", Link = "/signUp", Icon = "fa-regular fa-user", Text = "Sign upp" }' />
            </div>
        </div>
</header>
